%li
  %p.title
    - link_to creation.name.capitalizeall, "/creations/#{creation.name_url}", class: "name"
    
    
    %span.cat [#{creation.category}]
    - unless request.path =~ /users\/.+\/creations/
      \-
      - user = creation.user
      - link_to user.nick.capitalize, "/users/#{user.nick_url}", class: "nick"
  - img = nophoto? creation, :thumb
  - link_to "<img src='#{img}' />", "/creations/#{creation.name_url}"
