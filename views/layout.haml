!!! Strict
%html{ html_attrs("en_EN") }
  %head
    %title Hands-on Experience
    %link{ href: "/css/main.css", rel: "stylesheet" }
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "" }
    %meta{ name: "keywords", content: "" }    
    %meta{ name: "author", content: "" }    
    -# %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %script{ src: "/js/modernizr.js", type: "text/javascript" }
  %body{ class: body_class }
    #container
      %header
        %h1
          - link_to "<img src='/imgs/handsonxp_logo.png' id='logo' />", "/"
          - link_to "Hands-on", "/"
          %span
            - link_to "Experience", "/"
      %nav
        - link_to "Yes I am!", "/yes_i_am", class: "btn"    
        - link_to "What I do!", "/what_i_do", class: "btn"
      #content
        = yield
      %footer
    %script{ src: "/js/jquery.js", type: "text/javascript" }
    %script{ src: "/js/main.js", type: "text/javascript" }
    = yield_content :head
    %script{ type: "text/javascript" }
      $(function(){
      = yield_content :jquery
      });
    :javascript
      $(function(){
        // dom ready
      });